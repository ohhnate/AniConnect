# .env.example
# API Keys
ANILIST_API_KEY=your_anilist_api_key
JWT_SECRET_KEY=your_jwt_secret_key

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=animeconnect
DB_USER=postgres
